<div class="container">
<form class="signup-form">
    <div class="form-group">
        <label for="username-input">Username</label>
        <input type="username" class="form-control" id="username-signup" aria-describedby="usernameHelp"/>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail">Email address</label>
        <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp"/>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword">Password</label>
        <input type="password" class="form-control" id="password-signup"/>
    </div>
    <div class="login"> 
        Already have an account? Click here. <a href="/login"> Login </a>
    </div>
    <button type="submit" class="signup-btn btn btn-primary">Submit</button>
</form>
</div>

<script src="/js/signup.js"></script>